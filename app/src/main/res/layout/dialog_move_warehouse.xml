<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_white_rounded"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="移动货物"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/loading_number_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/title"
            android:layout_marginTop="4dp"
            android:text="移动数量"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_normal" />

        <EditText
            android:id="@+id/loading_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/title"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_white_small"
            android:gravity="center"
            android:hint="请输入移动数量"
            android:inputType="number"
            android:numeric="integer"
            android:textColor="@color/text_color_title"
            android:textColorHint="@color/text_color_content"
            android:textSize="@dimen/text_size_normal" />

        <!--<EditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_white_small"
            android:gravity="center"
            android:hint="移动数量"
            android:inputType="numberDecimal"
            android:textColor="@color/text_color_title"
            android:textColorHint="@color/text_color_content"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="请填写数量"
            android:textColor="@color/text_color_content"
            android:textSize="@dimen/text_size_normal" />-->
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_bg"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="取消"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_large" />

        <View
            android:layout_width="2px"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/divider" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_bg"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="确定"
            android:textColor="@color/sub_color1"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>


</LinearLayout>