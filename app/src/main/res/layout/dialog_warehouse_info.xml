<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_white_rounded"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="A仓库"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/owner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/title"
            android:text="所有人"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/owner_title"
            android:layout_alignParentRight="true"
            android:text="a公司"
            android:textColor="@color/text_color_supplementary"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/owner_title"
            android:layout_marginTop="4dp"
            android:text="订单金额"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/amount_title"
            android:layout_alignParentRight="true"
            android:text="6556553"
            android:textColor="@color/text_color_supplementary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/order_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/amount_title"
            android:layout_marginTop="4dp"
            android:text="订单类型"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/order_type_title"
            android:layout_alignParentRight="true"
            android:text="物流-整单"
            android:textColor="@color/text_color_supplementary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/expect_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/order_type_title"
            android:layout_marginTop="4dp"
            android:text="预期日期"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/expect_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/expect_date_title"
            android:layout_alignParentRight="true"
            android:text="2016-05-03"
            android:textColor="@color/text_color_supplementary"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/penalty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/expect_date_title"
            android:layout_marginTop="4dp"
            android:text="违约金"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/penalty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/penalty_title"
            android:layout_alignParentRight="true"
            android:text="2000"
            android:textColor="@color/text_color_supplementary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/loading_number_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/penalty_title"
            android:layout_marginTop="4dp"
            android:text="装货数量"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_normal" />

        <EditText
            android:id="@+id/loading_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/loading_number_title"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_white_small"
            android:gravity="center"
            android:hint="请输入装货数量"
            android:inputType="numberDecimal"
            android:textColor="@color/text_color_title"
            android:textColorHint="@color/text_color_content"
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/listDivider"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:showDividers="middle">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_bg"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="取消"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/loading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_bg"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="装货"
            android:textColor="@color/sub_color1"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>


</LinearLayout>