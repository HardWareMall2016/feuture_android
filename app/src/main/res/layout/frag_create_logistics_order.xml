<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_underline_selector"
            android:padding="10dp">

            <TextView
                android:id="@+id/logistics_order_detail_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_normal"/>

            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/logistics_order_detail_order"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/text_size_normal"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_underline_selector"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单物品"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_normal"/>
        </RelativeLayout>

        <com.zhan.ironfuture.ui.widget.MyListView
            android:id="@+id/order_detail_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#00000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#E4E4E4"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_underline_selector"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="指定接单公司"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_normal"/>

            <TextView
                android:id="@+id/select_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/arrow_right_small"
                android:text="指定接单公司"
                android:textColor="@color/text_main_color_selector"
                android:textSize="@dimen/text_size_normal"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_underline_selector"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单类型"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_normal"/>

            <TextView
                android:id="@+id/logistics_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="选择订单类型"
                android:textColor="@color/text_main_color_selector"
                android:textSize="@dimen/text_size_normal"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_underline_selector"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_normal"/>

            <EditText
                android:id="@+id/order_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:gravity="end"
                android:hint="请输入订单金额"
                android:inputType="number"
                android:textColor="@color/sub_color1"
                android:textColorHint="#999999"
                android:textSize="@dimen/text_size_normal"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_underline_selector"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="违约金"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_normal"/>

            <EditText
                android:id="@+id/order_penalty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:gravity="end"
                android:hint="请输入违约金"
                android:inputType="number"
                android:textColor="@color/sub_color1"
                android:textColorHint="#999999"
                android:textSize="@dimen/text_size_normal"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_underline_selector"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="逾期时间"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_normal"/>

            <TextView
                android:id="@+id/overdue_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="请选择逾期时间"
                android:textColor="@color/text_main_color_selector"
                android:textSize="@dimen/text_size_normal"/>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>