<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="?android:attr/listDivider"
    android:showDividers="middle"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/bg_white_underline_selector">
                <TextView
                    android:id="@+id/logistics_order_detail_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号："
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_title"/>
                <TextView
                    android:id="@+id/logistics_order_detail_num"
                    android:layout_toRightOf="@+id/logistics_order_detail_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20013"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_main"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/bg_white_underline_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单物品"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_title"/>
            </RelativeLayout>

            <com.zhan.ironfuture.ui.widget.MyListView
                android:id="@+id/logistics_order_detail_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E4E4E4"
                android:layout_marginTop="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/bg_white_underline_selector"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单类型"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_title"/>
                <TextView
                    android:id="@+id/logistics_order_detail_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流 - 订单"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_main"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/bg_white_underline_selector"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="违约金"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_title"/>
                <TextView
                    android:id="@+id/logistics_order_detail_penalty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9987"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_main"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/bg_white_underline_selector"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="逾期时间"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_title"/>
                <TextView
                    android:id="@+id/logistics_order_detail_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-10-19"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_main"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/bg_white_underline_selector"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流详情"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_title"/>
            </RelativeLayout>
            <com.zhan.ironfuture.ui.widget.MyListView
                android:id="@+id/logistics_order_detail_logistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>