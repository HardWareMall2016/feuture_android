    <RelativeLayout
        android:id="@+id/rl_purchase_order_out_data"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_underline_selector"
        android:padding="16dp">

        <TextView
            android:id="@+id/purchase_order_out_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="逾期时间"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_purchase_order_out_data"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_toRightOf="@+id/purchase_order_out_data"
            android:text="请选择逾期时间"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>
</LinearLayout>