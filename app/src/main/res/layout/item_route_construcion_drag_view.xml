<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:background="@drawable/bg_color4_dash_rounded_white_content">

    <com.zhan.framework.ui.widget.CircleImageView
        android:id="@+id/company_logo"
        xmlns:circle_image="http://schemas.android.com/apk/res-auto"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_company_logo"
        circle_image:border_width="0dp"/>

    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/company_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:text="公司"
        android:textColor="@color/text_color_content"
        android:textSize="@dimen/text_size_small"/>

</RelativeLayout>