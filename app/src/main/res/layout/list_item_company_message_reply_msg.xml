<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle_image="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_selector"
        android:padding="16dp">

        <com.zhan.framework.ui.widget.CircleImageView
            android:id="@+id/reply_msg_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            circle_image:border_width="0dp" />

        <TextView
            android:id="@+id/reply_msg_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/reply_msg_user"
            android:text="乔峰"
            android:textColor="@color/text_color_content"
            android:textSize="@dimen/text_size_large" />
        <TextView
            android:id="@+id/reply_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/reply_msg_username"
            android:layout_alignBottom="@id/reply_msg_username"
            android:textColor="@color/text_color_content"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/reply_msg_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reply_msg_username"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/reply_msg_user"
            android:text=""
            android:textColor="@color/text_color_content"
            android:textSize="@dimen/text_size_small" />
        <TextView
            android:id="@+id/reply_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reply_msg_intro"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/reply_msg_user"
            android:textColor="@color/text_color_content"
            android:textSize="@dimen/text_size_large" />

    </RelativeLayout>

</LinearLayout>