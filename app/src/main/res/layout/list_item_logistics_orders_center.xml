<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:id="@+id/order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_small"
        android:minHeight="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/order_num_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="订单号"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/order_num_title"
            android:text="875851265686568"
            android:textColor="@color/text_color_content"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_color4_half_circle_selector"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="4dp"
            android:text="接单"
            android:textColor="@color/text_color_content"
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>


    <TextView
        android:id="@+id/transport_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/order_title"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="由公司a送达公司b"
        android:textColor="@color/text_color_supplementary"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/amount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/transport_info"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="订单金额"
        android:textColor="@color/text_color_supplementary"
        android:textSize="@dimen/text_size_normal" />


    <TextView
        android:id="@+id/scheduled_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/amount_title"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="预计时间"
        android:textColor="@color/text_color_supplementary"
        android:textSize="@dimen/text_size_normal" />


    <TextView
        android:id="@+id/total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/amount_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:text="12562"
        android:textColor="@color/text_color_content"
        android:textSize="@dimen/text_size_normal" />


    <TextView
        android:id="@+id/scheduled_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/scheduled_time_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:text="2016-12-25"
        android:textColor="@color/text_color_content"
        android:textSize="@dimen/text_size_normal" />

</RelativeLayout>
