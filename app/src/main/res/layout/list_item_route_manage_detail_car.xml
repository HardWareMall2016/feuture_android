<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/detail_car_carname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            android:textSize="@dimen/text_size_normal"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/detail_car_comname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停靠：C公司"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_color_content"/>
            <TextView
                android:id="@+id/detail_car_pepnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="装卸工：3人"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_color_content"/>
            <TextView
                android:id="@+id/detail_car_fuelSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="燃料：80"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_color_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="补给"
        android:textSize="@dimen/text_size_normal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/text_color_content"
        android:drawableLeft="@drawable/arrow_up_small"
        android:background="@drawable/bg_color4_half_circle_selector"/>
</RelativeLayout>