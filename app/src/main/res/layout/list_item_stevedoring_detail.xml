<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/stevedoring_detail_productname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size_normal"
       />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="4dp">
        <TextView
            android:id="@+id/stevedoring_detail_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/main_color"
            android:text="1"
            />
        <TextView
            android:layout_toRightOf="@+id/stevedoring_detail_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:text="个"
            android:textColor="@color/text_color_content"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>

    <!--<com.zhan.ironfuture.ui.widget.SeekBarHint
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:max="1000"
        android:layout_marginTop="10dp"
        android:progress="5"
        hint:popupWidth="100dp"
        android:progressDrawable="@drawable/shape_bt_seekbar"
        android:thumb="@drawable/bt_seekbar"
        hint:yOffset="15dp"
        hint:popupStyle="fixed"/>-->
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最低"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:gravity="center">
            <TextView
                android:id="@+id/stevedoring_detail_allgoods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color_content"
                android:text="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color_content"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>