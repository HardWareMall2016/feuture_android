<?xml version="1.0" encoding="utf-8"?>
<com.zhan.ironfuture.ui.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_content_stevedoring_loading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_color4_rounded_white_content_selector"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/stevedoring_loading_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/text_color_content"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/stevedoring_loading_item_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stevedoring_loading_item_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/text_color_content"
        android:textSize="@dimen/text_size_small" />

    <ImageView
        android:id="@+id/stevedoring_loading_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_lock" />

</com.zhan.ironfuture.ui.widget.SquareLayout>
